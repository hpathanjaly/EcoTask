<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/checkNav.ejs') %>
    <div class='allCards'>
    <% if(tasks.length > 0){ %>
        <% for(let i = 0; i < tasks.length; i++){ %>
          <div id="task<%= i %>" class='task'>
            <a href="/task?id=<%= tasks[i]._id %>">
              <% if(tasks[i].image){ %>
                <img src = "<%= tasks[i].image %>">
              <% } %>
              <div class="taskInfo">
                <h1><%= tasks[i].title %></h1>
                <h3>Carbon Saved: <%= tasks[i].carbon_reduce_possibility %></h3>
                <p><%= tasks[i].description %></p>
              </div>
            </a>
          </div> 
          <% if (completed[i]) { %>
            <script>
              document.getElementById("task<%=i%>").classList.add("complete");
              
            </script>
          <% } %>
        <% } %>
      <% }  else{ %>
        <h1 class='black'>No Tasks</h1>
      <% } %>
    </div>
    <script>
      
    </script>
</body>
</html>