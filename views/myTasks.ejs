<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/checkNav.ejs') %>
    <div class='allCards'>
    <% if(tasks.length > 0){ %>
        <% tasks.forEach(task => { %>
          <div class='task'>
          <a href="/task?id=<%= task._id %>">
            <% if(task.image){ %>
              <img src = "<%= task.image %>">
            <% } %>
            <div class="taskInfo">
              <h1><%= task.title %></h1>
              <h3>Carbon Saved: <%= task.carbon_reduce_possibility %></h3>
              <p><%= task.description %></p>
              <form action = "/addTask" method = "post"> 
<!--               <input type="hidden" name="taskid" value="<%= task._id %>">
              <input type="hidden" name="userid" value="<%= session.userid %>">
              <input type='submit' value='Add Task' class='loginbtn'> -->    
              </form>
            </div>
            </a>
          </div>
        <% }) %>
      <% }  else{ %>
        <h1>No Tasks</h1>
      <% } %>
    </div>
</body>
</html>